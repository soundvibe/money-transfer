<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>[%level] [%d{yyyy-MM-dd HH:mm:ss.SSS}] [%thread] %logger{36} - %msg %n</Pattern>
        </encoder>
    </appender>

    <root>
        <level value="INFO" />
        <appender-ref ref="stdout" />
    </root>
</configuration>